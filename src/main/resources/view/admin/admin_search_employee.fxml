<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="800.0" stylesheets="@../../our.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controller.admin.AdminSearchEmployeeController">
   <children>
      <VBox prefHeight="80.0" prefWidth="800.0">
         <children>
            <HBox prefHeight="38.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="300.0" spacing="20.0">
                     <children>
                        <Label fx:id="labelFirstName" prefHeight="16.0" prefWidth="280.0" text="Label" textFill="WHITE">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="21.0" prefWidth="485.0" spacing="20.0">
                     <children>
                        <Label fx:id="labelDate" alignment="TOP_RIGHT" contentDisplay="RIGHT" prefHeight="21.0" prefWidth="292.0" text="Label" textFill="WHITE" />
                     </children>
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="290.0" spacing="20.0">
                     <children>
                        <Label fx:id="labelLastName" prefHeight="16.0" prefWidth="280.0" text="Label" textFill="WHITE" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="8.0" />
                     </HBox.margin>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="39.0" prefWidth="506.0">
                     <children>
                        <Button alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#btnBackPushed" text="%backButton">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="100.0" layoutY="80.0" prefHeight="556.0" prefWidth="601.0">
         <children>
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="538.0">
               <children>
                  <Label text="%listOfEmployeesLabel" textFill="WHITE">
                     <font>
                        <Font size="34.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="538.0" />
            <TableView fx:id="tableView" prefHeight="496.0" prefWidth="538.0">
               <placeholder>
                  <Label text="%noResultLabel" />
               </placeholder>
              <columns>
                <TableColumn fx:id="columnFirstName" prefWidth="138.0" text="%collumnFirstName" />
                <TableColumn fx:id="columnLastName" prefWidth="132.0" text="%collumnLastName" />
                  <TableColumn fx:id="columnLogin" prefWidth="145.0" text="%collumnLogin" />
                  <TableColumn fx:id="columnPhone" prefWidth="185.0" text="%collumnPhone" />
              </columns>
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#detailMenuSelected" text="Zobraziť detail" />
                        <MenuItem mnemonicParsing="false" onAction="#deleteMenuSelected" text="Zmazať" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
         </children>
      </VBox>
      <Button fx:id="buttonNextData" layoutX="408.0" layoutY="647.0" mnemonicParsing="false" onAction="#loadNext" prefHeight="35.0" prefWidth="28.0" text="-&gt;" />
      <Button fx:id="buttonPreviousData" layoutX="365.0" layoutY="647.0" mnemonicParsing="false" onAction="#loadPrevious" text="&lt;-" />
      <TextField fx:id="textFieldSearchInTables" layoutX="100.0" layoutY="649.0" onKeyReleased="#searchInTable" prefHeight="31.0" prefWidth="215.0" promptText="%filterFoundItemsText" />
      <TextField fx:id="textFieldSearchInDatabase" layoutX="486.0" layoutY="649.0" onKeyReleased="#searchInTable" prefHeight="31.0" prefWidth="215.0" promptText="%searchInDatabaseEmployeeText" />
      <Button layoutX="486.0" layoutY="691.0" mnemonicParsing="false" onAction="#buttonSearchInDatabasePushed" prefHeight="35.0" prefWidth="215.0" text="%searchInDatabaseButton" />
      <Button layoutX="100.0" layoutY="693.0" mnemonicParsing="false" onAction="#buttonDisplayDataPushed" text="%showDataButton" />
      <Label fx:id="labelOffset" alignment="CENTER" layoutX="320.0" layoutY="683.0" prefHeight="21.0" prefWidth="160.0" text="Label" />
      <JFXProgressBar fx:id="progressBar" layoutX="494.0" layoutY="737.0" />
   </children>
</AnchorPane>
